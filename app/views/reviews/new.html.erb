
<h1>New Review</h1>



<div >
  <div class="container">
    <%= simple_form_for [@manager, @review] do |f| %>
    <%= f.input :property_id, :as => :hidden, :input_html => { :value => params[:property_id] } %>
      <%= f.input :pros %>
      <%= f.input :cons %>
      <%= f.input :advice %>
      <%= f.input :rating %>
      <%= f.input :location %>
      <%= f.input :rent %>
      <%= f.input :service_charge %>
      <%= f.submit "Submit Review for Company", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
