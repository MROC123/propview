<div class="container">

  <div class="row my-2">

    <div class="manager-show-info col-12 col-lg-9">

      <h3>
      <%= @manager.name %>
      </h3>
      <h3>
      <%= @manager.address %>
      </h3>
      <p class="m-3">⭐️⭐️⭐️⭐️⭐️</p>


    </div>

    <div class="manager-show-other-properties-card col-12 col-lg-3">
      <h3> <%= @manager.name %>'s Properties
      </h3>
    </div>

    <div class="manager-show-reviews-card">
      <% @manager.reviews.each do |review| %>
      <%= review.pros %>
      <% end %>

      <%= link_to "Add a Review", new_manager_review_path(@manager) %>
    </div>

  </div>





  <div class="row my-2">
    <div class="map-card">
      <div>
        <h2 class="map-property-name"><%= @property.address %></h2>

        <div class="map-border">
            <img class="rounded" src="https://images.unsplash.com/photo-1569336415962-a4bd9f69cd83?q=80&w=1631&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="temp-map" width="100%" height="100%">
        </div>

      </div>
    </div>
  </div>

</div>
