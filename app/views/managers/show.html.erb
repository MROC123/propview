<div class="container">

  <div class="row my-2">

    <div class="manager-show-info col-12 col-lg-9 p-3">

      <div>
        <img class="manager-avatar" scr="https://images.unsplash.com/photo-1616587896595-51352538155b?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
      </div>

      <div>
        <h3 class="manager-show-name">
        <%= @manager.name %>
        </h3>
        <h3 class="manager-show-address">
        <%= @manager.address %>
        </h3>
        <p>⭐️⭐️⭐️⭐️⭐️</p>
        <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s</p>
      </div>

    </div>

    <div class="manager-show-other-properties-card col-12 col-lg-3 p-3">
      <h3 class="managers-properties-title"> <%= @manager.name %>'s Properties
      </h3>
    </div>

    <div class="manager-show-reviews-card p-3">
      <% @manager.reviews.each do |review| %>
      <%= review.pros %>
      <% end %>

      <%= link_to "Add a Review", new_manager_review_path(@manager) %>
    </div>

  </div>





  <div class="row my-2">
    <div class="map-card">
      <div>
        <h2 class="map-property-name"><%= @manager.address %></h2>

        <div class="map-border">
            <img class="rounded" src="https://images.unsplash.com/photo-1569336415962-a4bd9f69cd83?q=80&w=1631&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="temp-map" width="100%" height="100%">
        </div>

      </div>
    </div>
  </div>

</div>
